extends ../../layout/layout.pug
include ../../mixins/status.pug
block main 
    h1 Các sản phẩm đã xóa
    .card.mb-3 
        .car-header Danh sách sản phẩm
        .card-body
            table(
                class="table table-hover table-sm"
            )
                thead
                    tr 
                        th STT 
                        th Hỉnh ảnh 
                        th Tiêu đề
                        th Giá
                        th Trạng thái
                        th Thao tác
                tbody 
                    each item, index in productList 
                        tr 
                            td #{index + 1}
                            td 
                                img(src=item.thumbnail, alt=item.title, width=100, height=auto)
                            td #{item.title}
                            td #{item.price}
                            td
                                +status(item)
                            td 
                                button(
                                    class="btn btn-warning btn-sm" 
                                    button-recycle
                                    data-id = item._id
                                ) Khôi phục
                                button(
                                    class="btn btn-danger btn-sm ml-1"
                                    button-hard-delete
                                    data-id = item._id
                                ) Xóa vĩnh viễn
    form(
        action=""
        method="POST"
        path=`${prefixAdmin}/trash/recycle`
        form-recycle
    ) 

    form(
        action=""
        method="POST"
        form-change-status
        path=`${prefixAdmin}/trash/change`
    ) 

    form(
        action=""
        method="POST"
        path=`${prefixAdmin}/trash/delete`
        form-hard-delete
    ) 


    script(src="/admin/js/trash.js")